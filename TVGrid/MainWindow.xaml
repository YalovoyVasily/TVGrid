<Window x:Name="MainWindow1" x:Class="TVGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TVGrid"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="MainWindow1_Loaded">
    <Grid>

        <TabControl Margin="0,83,0,0">
            <TabItem Header="Расписание" FontFamily="Cascadia Code SemiBold">
                <DataGrid x:Name="dgShedule" d:ItemsSource="{d:SampleData ItemCount=5}"/>
            </TabItem>
        </TabControl>
        <Button x:Name="btEdit" Content="Редактировать плейлист" HorizontalAlignment="Right" Margin="0,23,32,0" VerticalAlignment="Top" Height="55" Width="158" FontFamily="Cascadia Code SemiBold" IsEnabled="False" Click="Button_Click"/>
        <Label x:Name="lblUserName" Content="Фамилия Имя Отчество" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Width="171" FontFamily="Cascadia Code SemiBold"/>

    </Grid>
</Window>
