<Page x:Class="TVGrid.PornductionProgram"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TVGrid"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PornductionProgram">

    <Grid>
        <TabControl Margin="0,83,0,0">
            <TabItem Header="Расписание" FontFamily="Cascadia Code SemiBold">
                <DataGrid x:Name="dgShedule" d:ItemsSource="{d:SampleData ItemCount=5}"/>
            </TabItem>
            <TabItem Header="Реклама" FontFamily="Cascadia Code SemiBold">

            </TabItem>
        </TabControl>
        <Button Content="Редактировать плейлист" HorizontalAlignment="Right" Margin="0,23,32,0" VerticalAlignment="Top" Height="55" Width="158" FontFamily="Cascadia Code SemiBold" IsEnabled="False" Click="Button_Click"/>
        <Label x:Name="lblUserName" Content="Фамилия Имя Отчество" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Width="171" FontFamily="Cascadia Code SemiBold"/>

    </Grid>
</Page>
